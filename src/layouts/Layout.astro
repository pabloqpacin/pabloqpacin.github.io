---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { getLangFromUrl } from '@i18n/utils';
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="icon" type="image/png" href="/bonfire.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="main">
			<script src="../scripts/oneko.js"></script>
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}
	.main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 18px;
		line-height: 1.4;
	}
	a {
		color: yellowgreen;
	}
	.nav {
		display: flex;
		text-align: end;
		justify-content: end;
		align-items: center;
		margin-left: 15px;
		/* padding: 10px 15px;		 */
	}
	.nav a,
	.nav button {
		margin-left: 15px;
	}
  .icon-button {
    cursor: pointer;
    background: none;
    border: none;
    border-radius: 50%;
		margin-left: 10px;
	}
	.footer {
		position: fixed;
		bottom: 0;
		text-align: center;
		flex: 1;
    width: 100%;
    max-width: 75ch;
	}
	code {
		font-size: 16px;
		color: blanchedalmond;
		color: yellowgreen;
	}
	.list-projects {
		line-height: 1.8;
	}
</style>
